<!DOCTYPE html>
<html lang="pt-br">

<%- include ('parts/page-head', {title: 'form', stylesheets: ['/styles/partials/form.css']}) %>

<body>
    
    <%- include('parts/page-header', {isbackreturn: true,href: '/'})  %> 

    <div id="form">
        <form action="">
            <div class="input-group">
                <label for="url-link" class="sr-only">url do vídeo</label>
                <input 
                    autocomplete="off"
                    type="text"
                    placeholder="Link do vídeo"
                    id="url-link"
                    
                    name="url-link"
                />
            </div>
            
            <div class="input-group">
                <label 
                    for="select-width"   
                    class="sr-only"
                >Seleciona Largura</label>
                <input 
                    type="number"
                    inputmode="numeric"
                    autocomplete="off"
                    placeholder="Largura desejada"
                    id="select-width"
                  
                    name="select-width"
                    list="widths"
                />
                
                <datalist id="widths">
                    <option>1366</option>
                    <option>1280</option>
                    <option>1024</option>
                    <option>800</option>
                </datalist>
            </div>
            
            <div class="input-group actions">
                <button type="submit">
                    <a>
                        Iniciar vídeo
                    </a>
                </button>
            </div>
        </form>
    </div>
        
    <script type="module" src="/scripts/script.js"></script>
    <script src="/scripts/toggleTheme.js"></script>
    <script type="module" src="/scripts/form.js"></script>
</body>
</html>
